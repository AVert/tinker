    %script{:type=>'bouncie/interaction'}= CGI.escapeHTML bouncie.interaction || ''
    %script{:src=>'/js/mootools.js'}
    %script{:src=>'/js/mootools-more.js'}
    %script{:src=>'/js/codemirror.js'}
    %script{:src=>'/js/syntax/xml.js'}
    %script{:src=>'/js/syntax/css.js'}
    %script{:src=>'/js/syntax/javascript.js'}
    %script{:src=>'/js/bounce.core.js'}
